@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix : <http://www.semanticweb.org/tiago/ontologies/2025/11/poliontology/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix schema: <https://schema.org/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dct: <http://purl.org/dc/terms/> .

:MoPShape
    a sh:NodeShape ;
    sh:targetClass :MoP ;
    sh:property [
        sh:path :hasMembership ;
        sh:class :Membership ;
        sh:minCount 1 ;
        sh:message "Each MoP must have at least 1 Membership"@en, "Cada MoP (deputado) deverá ter pelo menos 1 Membership"@pt ;
    ] ;
    sh:property [
        sh:path :hasDuty ;
        sh:class :Duty ;
    ] ;
    sh:property [
        sh:path :hasInterestRegistry ;
        sh:class :InterestRegistry ;
    ] ;
    sh:property [
        sh:path :electedIn ;
        sh:class :ElectoralCircle ;
        sh:minCount 1 ;
        sh:message "Each MoP must have at least 1 Electoral Circle"@en, "Cada MoP (deputado) deverá ter pelo menos 1 Círculo Eleitoral"@pt ;
    ] ;
    sh:property [
        sh:path :servesDuring ;
        sh:class :Legislature ;
        sh:minCount 1 ;
        sh:message "Each MoP must have at least 1 Legislature"@en, "Cada MoP (deputado) deverá ter pelo menos 1 Legislatura"@pt ;
    ] ;
    sh:property [
        sh:path :inSituation ;
        sh:class :Situation ;
        sh:minCount 1 ;
        sh:message "Each MoP must have at least 1 Situation"@en, "Cada MoP (deputado) deverá ter pelo menos 1 Situação"@pt ;
    ] ;
    sh:property [
        sh:path :parliamentaryName ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:message "Each MoP must have at lesat 1 Parliamentary Name"@en, "Cada MoP (deputado) deverá ter pelo menos 1 Nome Parlamentar"@pt ;
    ] ;
    sh:property [
        sh:path :bid ;
        sh:datatype xsd:int ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:message "Each MoP must have exactly 1 bid"@en, "Cada MoP (deputado) deverá ter exatamente 1 bid"@pt ;
    ] ;
    sh:property [
        sh:path schema:name ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:message "Each MoP must have exactly 1 name"@en, "Cada MoP (deputado) deverá ter exatamente 1 nome"@pt ;
    ] 
.

:MembershipShape
    a sh:NodeShape ;
    sh:targetClass :Membership ;
    sh:property [
        sh:path :membershipOfGroup ;
        sh:class :ParliamentaryGroup ;
        sh:maxCount 1 ;
        sh:message "Each Membership must be associated to at maximum 1 Parliamentary Group"@en, "Cada Membership deverá ter no máximo 1 Grupo Parlamentar"@pt ;
    ] ;
    sh:property [
        sh:path :memberDuringLegislature ;
        sh:class :Legislature ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:message "Each Membership must be associated to exactly 1 Legislature"@en, 
            "Cada Membership deverá ter exatamente 1 Legislatura"@pt ;
    ] ;
    sh:property [
        sh:path schema:startDate ;
        sh:datatype xsd:date ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:message "Each Membership must have a starting date"@en, 
            "Cada Membership deverá ter uma data de ínicio"@pt ;
    ] ;
    sh:property [
        sh:path schema:endDate ;
        sh:datatype xsd:date ;
        sh:maxCount 1 ;
        sh:message "Each Membership can only have one ending date"@en, 
            "Cada Membership deverá ter apenas uma data de fim"@pt ;
    ]
.

:DutyShape
    a sh:NodeShape ;
    sh:targetClass :Duty ;
    sh:property [
        sh:path :dutyType ;
        sh:class skos:Concept ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:startDate ;
        sh:datatype xsd:date ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:message "Each Duty must have a starting date"@en, 
            "Cada Cargo deverá ter uma data de ínicio"@pt ;
    ] ;
    sh:property [
        sh:path schema:endDate ;
        sh:datatype xsd:date ;
        sh:maxCount 1 ;
        sh:message "Each Duty can only have one ending date"@en, 
            "Cada Cargo deverá ter apenas uma data de fim"@pt ;
    ] 
.

:SituationShape
    a sh:NodeShape ;
    sh:targetClass :Situation ;
    sh:property [
        sh:path :situationType ;
        sh:class skos:Concept ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:startDate ;
        sh:datatype xsd:date ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:message "Each Situation must have a starting date"@en, 
            "Cada Situação deverá ter uma data de ínicio"@pt ;
    ] ;
    sh:property [
        sh:path schema:endDate ;
        sh:datatype xsd:date ;
        sh:maxCount 1 ;
        sh:message "Each Situation can only have one ending date"@en, 
            "Cada Situação deverá ter apenas uma data de fim"@pt ;
    ] 
.

:LegislatureShape
    a sh:NodeShape ;
    sh:targetClass :Legislature ;
    sh:property [
        sh:path :hasSession ;
        sh:class :LegislativeSession ;
    ] ;
    sh:property [
        sh:path schema:startDate ;
        sh:datatype xsd:date ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:message "Each Legislature must have a starting date"@en, 
            "Cada Legislatura deverá ter uma data de ínicio"@pt ;
    ] ;
    sh:property [
        sh:path schema:endDate ;
        sh:datatype xsd:date ;
        sh:maxCount 1 ;
        sh:message "Each Legislature can only have one ending date"@en, 
            "Cada Legislatura deverá ter apenas uma data de fim"@pt ;
    ] ;
    sh:property[
        sh:path schema:position;
        sh:datatype xsd:int ;
        sh:maxCount 1 ;
        sh:minInclusive 1;
        sh:message "Each Legislature must have at most one position"@en, 
            "Cada Legislatura deverá ter no máximo uma posição"@pt ;
    ]
.

:LegislativeSessionShape
    a sh:NodeShape ;
    sh:targetClass :LegislativeSession ;
    sh:property [
        sh:path :duringLegislature ;
        sh:class :Legislature ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:message "Each Legislative Session must be associated with one Legislature"@en, 
            "Cada Legislatura deverá ter obrigatoriamente uma associação a uma Legislatura"@pt ;
    ] ;
    sh:property [
        sh:path schema:startDate ;
        sh:datatype xsd:date ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:message "Each Legislative Session must have a starting date"@en, 
            "Cada Sessão Legislativa deverá ter uma data de ínicio"@pt ;
    ] ;
    sh:property [
        sh:path schema:endDate ;
        sh:datatype xsd:date ;
        sh:maxCount 1 ;
        sh:message "Each Legislative Session can only have one ending date"@en, 
            "Cada Sessão Legislativa deverá ter apenas uma data de fim"@pt ;
    ] ;
    sh:property[
        sh:path schema:position;
        sh:datatype xsd:int ;
        sh:maxCount 1 ;
        sh:minInclusive 1;
        sh:message "Each Legislature must have at most one position"@en, 
            "Cada Legislatura deverá ter no máximo uma posição"@pt ;
    ] ;
    sh:property[
        sh:path rdfs:label ;
    ]
.

:ElectoralCircleShape
    a sh:NodeShape ;
    sh:targetClass :ElectoralCircle ;
    sh:property [
        sh:path :inLegislature ;
        sh:class :Legislature ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:message "Each Electoral Circle must be associated to exactly 1 Legislature"@en, 
            "Cada Círculo Eleitoral deverá ter exatamente 1 Legislatura"@pt ;
    ] ;
    sh:property[
        sh:path rdfs:label ;
    ] ;
    sh:property[
        sh:path dct:identifier ;
        sh:datatype xsd:float ;
    ]    
.

:ParliamentaryGroupShape
    a sh:NodeShape ;
    sh:targetClass :ParliamentaryGroup ;
    sh:property[
        sh:path skos:prefLabel ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:message "Each Parliamentary Group must have exactly one prefLabel with the complete name"@en, 
            "Cada Grupo Parlamentar deverá ter exatamente uma prefLabel como o nome completo"@pt ;
    ] ;
    sh:property[
        sh:path skos:altLabel ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:message "Each Parliamentary Group must have exactly one altLabel with the acronym"@en, 
            "Cada Grupo Parlamentar deverá ter exatamente uma altLabel como a sigla"@pt ;
    ] ;
.

:InterestRegistryShape
    a sh:NodeShape ;
    sh:targetClass :InterestRegistry .

:DutyTypeSchemeShape
    a sh:NodeShape ;
    sh:targetClass skos:ConceptScheme ;
    sh:property [
        sh:path skos:prefLabel ;
        sh:minCount 1 ;
        sh:message "Duty Type must have one prefLabel"@en, "Tipo de Cargo (Duty Type) deve ter exatamente um prefLabel"@pt
    ] .

:SituationTypeSchemeShape
    a sh:NodeShape ;
    sh:targetClass skos:ConceptScheme ;
    sh:property [
        sh:path skos:prefLabel ;
        sh:minCount 1 ;
        sh:message "Situation Type must have one prefLabel"@en, "Tipo de Situação (Situation Type) deve ter um prefLabel"@pt
    ] .
